<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Vue tree avancé wage -->
	<record model="ir.ui.view" id="view_hr_wage_advance_tree">
	    <field name="name">hr.wage.advance.tree</field>
	    <field name="model">hr.wage.advance</field>
	    <field name="arch" type="xml">
	        <tree string="Avance sur salaire">
	            <field name="name"/>
	            <field name="employee_id"/>
	            <field name="department_id"/>
	            <field name="manager_id"/>
	            <field name="date"/>
	            <field name="amount"/>
	        </tree>
	    </field>
	</record>

	<!-- Avance sur salaire tree view -->
	<record model="ir.ui.view" id="view_hr_payroll_interim_tree">
	    <field name="name">hr.payroll.interim.tree</field>
	    <field name="model">hr.payroll.interim</field>
	    <field name="arch" type="xml">
	        <tree string="Interim">
	            <field name="employee_id"/>
	            <field name="department_id"/>
	            <field name="manager_id"/>
	        </tree>
	    </field>
	</record>

	<!-- Avance sur salaire form view -->
	<record model="ir.ui.view" id="view_hr_wage_advance_form">
	    <field name="name">hr.wage.advance.form</field>
	    <field name="model">hr.wage.advance</field>
	    <field name="arch" type="xml">
	        <form string="Création d'un avance sur salaire">
	            <header>
	            	<button name="accept_avance" string="Approuver" type="object" class="btn btn-primary" attrs="{'invisible': [('state', '=', 'ok')]}" />
	            	<button name="deny_avance" string="Réfuser" type="object" attrs="{'invisible': [('state', '=', 'not_ok')]}" />
	                <field name="state" widget="statusbar" clickable="1" statusbar_visible="draft,ok,not_ok" />
	            </header>
	            <sheet>
	                <group>
	                	<group>
	                		<div class="oe_title">
	                			<label for="employee_id" class="oe_edit_only" />
	                			<h4><field name="employee_id" placeholder="Employé" /></h4>
	                		</div>
	                	</group>
	                	<group>
	                		<field name="name"/>
	                		<field name="date"/>
	                		<field name="amount"/>
	                	</group>
	                	<group>
	                		<field name="department_id"/>
	                		<field name="manager_id"/>
	                	</group>
	                </group>
	            </sheet>
	        </form>
	    </field>
	</record>

	<!-- Interim form view -->
	<record model="ir.ui.view" id="view_hr_payroll_interim_form">
	    <field name="name">hr.payroll.interim.form</field>
	    <field name="model">hr.payroll.interim</field>
	    <field name="arch" type="xml">
	        <form string="Création d'un interim">
	            <sheet>
	                <group>
	                	<group>
	                		<field name="employee_id"/>
	                		<field name="department_id"/>
	                		<field name="manager_id"/>
	                	</group>
	                </group>
	            </sheet>
	        </form>
	    </field>
	</record>

	<!-- Action hr.wage.advance -->
	<record model="ir.actions.act_window" id="action_hr_wage_advance">
	    <field name="name">Avance sur salaire</field>
	    <field name="res_model">hr.wage.advance</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
	    <field name="help" type="html">
	    	<p class="oe_view_nocontent_create">
	    		Cliquer sur créer pour créer un avance sur salaire
	    	</p>
	    </field>
	</record>

	<!-- Action Interim -->
	<record model="ir.actions.act_window" id="action_hr_payroll_interim">
	    <field name="name">Interim</field>
	    <field name="res_model">hr.payroll.interim</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
	    <field name="help" type="html">
	    	<p class="oe_view_nocontent_create">
	    		Cliquer sur créer pour créer un interim
	    	</p>
	    </field>
	</record>

	<!-- Menu recrutement -->
	<menuitem id="hr_wage_advance_menu" name="Avance sur salaire" parent="hr_payroll.menu_hr_payroll_root" action="action_hr_wage_advance"/>

	<!-- menu interim -->
	<menuitem id="hr_payroll_interim_menu" name="Interim" parent="hr_payroll.menu_hr_payroll_root" action="action_hr_payroll_interim"/>

</odoo>