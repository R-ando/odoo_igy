<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_count_bom_tree_view" model="ir.ui.view">
        <field name="name">sale.count.bom.tree.view</field>
        <field name="model">sale.count.bom</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="product_name"/>
                <field name="product_qty"/>
                <field name="product_uom_name"/>
                <field name="product_cat_name"/>
            </tree>
        </field>
    </record>
    <record id="sale_count_bom_action" model="ir.actions.act_window">
        <field name="name">Consommation bom</field>
        <field name="res_model">sale.count.bom</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>