<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherit</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <!--calcul la consommation pour les sale_order_lines-->
            <xpath expr="//header" position="inside">
                <button name="action_count" string="Calcuer les donnÃ©es" type="object"/>
            </xpath>
            <!--Bon de commande-->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="crm_lead_id" required="1"/>
            </xpath>

            <!--Ligne de commande-->
            <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="before">
                <field name="image" widget="image" class="oe_avatar oe_left" />
            </xpath>
            <xpath expr="//field[@name='order_line']" position="after">
                <button name="action_config_order_line" type="object" string="Configuration sale" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="image" widget="image"  class="oe_avatar" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="mesure" readonly="1"/>
            </xpath>
            <!--<make them readonly>-->
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="replace">
                <field name="price_unit" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="replace">
                <field name="product_uom" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>