<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_line_count" model="ir.ui.view">
        <field name="name">Consommation</field>
        <field name="model">sale.order.line.count</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <h1>Calcul la consommation de matières premières</h1>
                </group>
                <footer>
                    <button name="open_table" string="Calculer les données" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_stock_quantity_history" model="ir.actions.act_window">
        <field name="name">Mesure consommation</field>
        <field name="res_model">sale.order.line.count</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_order_line_count"/>
        <field name="target">new</field>
    </record>

    <menuitem id="sale_count_bom_main_menu"
              parent="sale.sale_menu_root"
              name="Consommation"
    />
    <menuitem id="sale_count_bom_sub_menu"
              parent="sale_count_bom_main_menu"
              name="Bom"
              action="action_stock_quantity_history"
    />
</odoo>