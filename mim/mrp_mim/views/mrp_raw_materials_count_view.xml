<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="raw_material_tree_view_ver2">
        <field name="name">raw.materials.tree.view2</field>
        <field name="model">mrp.rawmaterials.count</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_name"/>
                <field name="product_qty"/>
                <field name="product_uom_name"/>
                <field name="product_cat_name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="raw_material_action_view_ver2">
        <field name="name">Matières premières ver2</field>
        <field name="res_model">mrp.rawmaterials.count</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="raw_material_tree_view_ver2"/>
    </record>

    <menuitem
        id="menu_root_mrp_conso"
        name="Consommation"
        parent="mrp.menu_mrp_root" />

    <menuitem
        id="menu_manu_conso"
        name="Matières premières"
        parent="menu_root_mrp_conso"
        action="raw_material_action_view_ver2"/>

    </data>
</odoo>
