<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Vue formulaire contrat -->
	<record model="ir.ui.view" id="view_hr_contact_view_form_inherit">
	    <field name="name">hr.contact.view.form.inherit</field>
	    <field name="model">hr.contract</field>
	    <field name="priority">20</field>
	    <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
	    <field name="arch" type="xml">
	        <xpath expr="//field[@name='wage']" position="after">
	            <field name="categorie" />
	            <field name="echelon" />
	            <field name="indice" />
	            <field name="horaire_hebdo" string="Horaire hebdomadaire" required="1" />
	        	<field name="payement_mode" />
	        </xpath>
	    </field>
	</record>

	<!-- Vue formulaire company -->
	<record model="ir.ui.view" id="view_res_company_form_inherit">
	    <field name="name">res.company.form.inherit</field>
	    <field name="model">res.company</field>
	    <field name="type">form</field>
	    <field name="inherit_id" ref="base.view_company_form" />
	    <field name="arch" type="xml">
	        <xpath expr="//page" position="after">
	            <page string="Configuration">
	            	<group string="Paie">
		            	<group>
		            		<field name="siret" />
		            		<field name="ape" />
		            		<field name="seuil_irsa" />
		            		<field name="taux_irsa" />
		            		<field name="abat_irsa" />
		            	</group>
		            	<group>
		            		<field name="num_cnaps_patr" />
		            		<field name="plafond_cnaps" />
		            		<field name="cotisation_cnaps_patr" />
		            		<field name="cotisation_cnaps_emp" />
		            		<field name="conge_mens" />
		            	</group>
	            	</group>
	            </page>
	        </xpath>
	    </field>
	</record>

	<!-- Vue formulaire employé -->
	<record model="ir.ui.view" id="view_hr_employee_form_inherit">
	    <field name="name">hr.employee.form.inherit</field>
	    <field name="model">hr.employee</field>
	    <field name="type">form</field>
	    <field name="inherit_id" ref="hr.view_employee_form" />
	    <field name="arch" type="xml">
	        <xpath expr="//field[@name='identification_id']" position="after">
	            <field name="num_cnaps_emp" string="N° CNAPS" />
	            <field name="num_cin" string="N° CIN" />
	            <field name="num_emp" string="N° Matricule" />
	        </xpath>
	    </field>
	</record>

</odoo>