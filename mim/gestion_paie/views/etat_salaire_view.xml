<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<!-- Vue recherce -->
	<record model="ir.ui.view" id="view_hr_payroll_tree_search">
	    <field name="name">hr.payroll.tree.search</field>
	    <field name="model">etat.salaire</field>
	    <field name="arch" type="xml">
	        <search>
	            <field name="num_emp" string="Matricule" />
	            <field name="num_cin" string="CIN" />
	            <group expand="0" string="Group By...">
	                <filter string="Début période" domain="[]" icon="terp-personal+" context="{'group_by': 'date_from'}"/>
	            </group>
	        </search>
	    </field>
	</record>

	<!-- Vue Tree -->
	<record model="ir.ui.view" id="view_hr_payroll_etat_salaire_tree">
	    <field name="name">hr.payroll.etat.salaire.tree</field>
	    <field name="model">etat.salaire</field>
	    <field name="arch" type="xml">
	        <tree string="Etat de salaire">
	            <field name="num_emp" />
	            <field name="name_related"/>
				<field name="num_cin"/>
				<field name="basic"/>
				<field name="brut"/>
				<field name="cnaps"/>
				<field name="cnapsemp"/>
				<field name="omsi"/>
				<field name="omsiemp"/>
				<field name="irsa"/>
				<field name="net"/>
				<field name="date_from"/>
				<field name="date_to"/>
	        </tree>
	    </field>
	</record>

	<!-- Actions -->
	<record model="ir.actions.act_window" id="open_payroll_etat_salaire">
	    <field name="name">Etat salaire</field>
	    <field name="res_model">etat.salaire</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
	    <field name="view_id" ref="view_hr_payroll_etat_salaire_tree" />
	</record>

	<!-- Menu -->
	<menuitem id="payroll_etat_global_menu" name="Etat Global" parent="hr_payroll.menu_hr_payroll_root" />
	<menuitem id="payroll_etat_salaire_menu" parent="payroll_etat_global_menu" action="open_payroll_etat_salaire"/>
</odoo>