<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<!-- Vue recherche -->
	<record id="hr_payroll_ostie_search" model="ir.ui.view">
	    <field name="name">hr.payroll.ostie.search</field>
	    <field name="model">ostie</field>
	    <field name="arch" type="xml">
	        <search string="Recherche">
	        	<field name="num_emp" string="Matricule" />
	        	<field name="num_cin" string="CIN" />
	        	<group expand="0" string="Group By..." >
	        		<filter string="filtre par mois" icon="terp-personnal+" domain="[]" context="{'group_by':'date_from'}" />
	        		<filter string="nom" icon="terp-personal+" domain="[]" context="{'group_by':'name_related'}"/>
	        	</group>
	        </search>
	    </field>
	</record>

	<!-- Vue tree -->
	<record model="ir.ui.view" id="view_hr_payroll_ostie_tree">
	    <field name="name">hr.payroll.ostie.tree</field>
	    <field name="model">ostie</field>
	    <field name="arch" type="xml">
	        <tree string="Ostie" edit="false" create="false" >
	                <field name="num_emp"/>
                    <field name="name_related"/>
                    <field name="num_cin"/>
                    <field name="basic"/>
                    <field name="brut"/>
                    <field name="omsi"/>
                    <field name="omsiemp"/>
                    <field name="totalomsi"/>
                    <field name="net"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
	        </tree>
	    </field>
	</record>

	<!-- Actions -->
	<record model="ir.actions.act_window" id="open_payroll_ostie">
	    <field name="name">Etat OSTIE</field>
	    <field name="res_model">ostie</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
	    <field name="view_id" ref="view_hr_payroll_ostie_tree" />
	</record>

	<!-- Menu -->
	<menuitem id="payroll_ostie_menu" parent="payroll_etat_global_menu" action="open_payroll_ostie"/>
</odoo>